---
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import { markdownify } from "@/lib/utils/textConverter";
const { footer_content, copyright } = config.params;
---

<footer class="section bg-light pb-0">
  <div class="container">
    {/* footer menu */}
    <div class="row">
      {
        menu.footer.map((col) => {
          return (
            <div class="mb-12 sm:col-6 lg:col-3">
              <h2 class="h4" set:html={markdownify(col.name)} />
              <ul class="mt-6">
                {col?.menu.map((item) => (
                  <li class="mb-1">
                    <a href={item.url} rel="">
                      {item.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          );
        })
      }
      {/* organization info */}
      <div class="md-12 sm:col-6 lg:col-12">
        {footer_content && (
          <p class="mt-3 mb-4 text-center" set:html={markdownify(footer_content)} />
        )}

        <div class="flex flex-col items-center gap-4 text-sm text-text md:flex-row md:justify-center">
          <a class="btn btn-primary px-5 py-3 text-sm" href="/contact-us">
            Contact Us
          </a>
          <div class="text-center">
            <p class="mb-2 text-sm text-text">
              OPEN Northwest is a 501c3 nonprofit organization with EIN 82-1626266.
            </p>
            <p class="m-0">
              PO Box 33556, Portland, OR 97292, United States
            </p>
          </div>
        </div>
      </div>
    </div>
    {/* copyright */}
    <div class="border-t border-border py-6">
      <p class="text-sm text-center" set:html={markdownify(copyright)} />
    </div>
  </div>
</footer>
